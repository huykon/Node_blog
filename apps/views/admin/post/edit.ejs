<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New post</title>
    <%- include ../layouts/head %>
        <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
        <script>
            tinyMCE.init({
                mode : "specific_textareas",
                editor_selector : "content"   //<<<---- 
            });
        </script>
</head>

<body>
    <div class="container">
        <% include ../layouts/nav %>
            <div class="panel panel-default">
                <div class="panel-heading">Edit Post</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <% if(data && data.error){ %>
                                <div id="login-alert" class="alert alert-danger col-sm-12">
                                    <%= data.error %>
                                </div>
                                <% } %>
                                    <form role="form" lpformnum="1">
                                        <input type="hidden" class="id" name="id" value="<% if(data && data.post){%> <%= data.post.id %> <%} %>">
                                        <div class="form-group">
                                            <label>Title</label>
                                            <input class="form-control title" name="title" placeholder="Title" value="<% if(data && data.post){%> <%= data.post.title %> <%} %>">
                                        </div>
                                        <div class="form-group">
                                            <label>Content</label>
                                            <textarea name="content" id="content_post" class="form-control content" cols="30" rows="10">
                                            <% if(data && data.post){%> <%= data.post.content %> <%} %>
                                            </textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Author</label>
                                            <input class="form-control author" name="author" placeholder="Author" value="<% if(data && data.post){%> <%= data.post.author %> <%} %>">
                                        </div>

                                        <!-- <div class="form-group">
                                    <label>Multiple Selects</label>
                                    <select multiple="" class="form-control">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                    </select>
                                </div> -->
                                        <button type="button" class="btn btn-primary post_edit">Update</button>
                                    </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>
    <script type="text/javascript" src="/static/js/post.js"></script>
</body>

</html>